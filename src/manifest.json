{
  "manifest_version": 3,
  "name": "ChatGPT Assistant",
  "description": "Use ChatGPT everywhere",
  "version": "0.5.0",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/images/16.png",
      "32": "assets/images/16.png",
      "48": "assets/images/48.png",
      "128": "assets/images/128.png"
    },
    "default_title": "ChatGPT Assistant"
  },
  "icons": {
    "16": "assets/images/16.png",
    "32": "assets/images/16.png",
    "48": "assets/images/48.png",
    "128": "assets/images/128.png"
  },
  "background": {
    "service_worker": "background/index.ts",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Ctrl+Shift+Y",
        "linux": "Ctrl+Shift+Y"
      }
    }
  },
  "host_permissions": ["https://*.openai.com/"],
  "permissions": ["activeTab", "storage", "tabs", "contextMenus"],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "omnibox": {
    "keyword": "gpt"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "https://*.bing.com/*",
        "https://search.brave.com/*",
        "https://*.duckduckgo.com/*"
      ],
      "js": ["content-script/index.ts"]
    },
    {
      "matches": ["https://msfrisbie.github.io/*"],
      "css": ["styles/content-script.scss"]
    }
  ]
}
